---
import { Invitee } from '@/lib/schema'
import { AttendanceForm } from './AttendanceForm'
import Title from '../ui/Title.astro'

interface Props {
  invitee?: Invitee
}
const { invitee } = Astro.props
---

<section class="overflow-hidden">
  <div class="container mx-auto py-4 xl:py-12 px-4 sm:px-6 lg:px-36 xl:px-48 grid gap-20 items-center">
    <div class="lg:flex gap-x-8 lg:gap-x-16 items-center">
      <img
        src="/images/letter.png"
        class="dark:invert dark:grayscale dark:brightness-0 w-full lg:w-1/2 h-auto sm:w-auto sm:max-h-44 xl:max-h-72 mx-auto relative pointer-events-none mb-4 lg:mb-0"
        loading="lazy"
      />
      <div class="lg:max-w-xl space-y-2">
        <Title className="relative inline-block pointer-events-none">Konfirmasi Kehadiran</Title>
        <p class="text-muted-foreground text-base lg:text-lg mb-4 relative inline-block pointer-events-none">
          Di hari istimewa ini, kami berharap bisa membaginya bersama orang-orang tersayang. Yuk isi RSVP-nya, agar kami tahu
          Anda akan hadir dan menjadi bagian dari momen ini.
        </p>
        <AttendanceForm client:only invitee={invitee} />
      </div>
    </div>
  </div>
</section>
