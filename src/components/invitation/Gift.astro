---
import { GRADIENTS } from '@/lib/color'
import IconContainer from '../icons/IconContainer.astro'
import List from './List.astro'
import ListItem from './ListItem.astro'
import Card from '../icons/Card.astro'
import Truck from '../icons/Truck.astro'
import ListTitle from './ListTitle.astro'
import ListDesc from './ListDesc.astro'
import { CopyButton } from '../common/CopyButton'
import Title from '../ui/Title.astro'
import { GROOM_FULLNAME } from 'astro:env/client'
import { BRIDE_FULLNAME } from 'astro:env/client'

const ACCOUNTS = [
  {
    color: GRADIENTS.orange,
    icon: Card,
    id: '1234567890',
    name: `BNI a.n. ${GROOM_FULLNAME}`
  },
  {
    color: GRADIENTS.green,
    icon: Card,
    id: '012345678921',
    name: `BSI a.n. ${GROOM_FULLNAME}`
  },
  {
    color: GRADIENTS.yellow,
    icon: Card,
    id: '123456789012',
    name: `Bank Jago a.n. ${GROOM_FULLNAME}`
  },
  {
    color: GRADIENTS.blue,
    icon: Card,
    id: '1234 5678 9012 3456 7890',
    name: `BRI a.n. ${BRIDE_FULLNAME}`
  },
  {
    color: GRADIENTS.red,
    icon: Truck,
    id: 'Kirim langsung ke',
    name: '4 Chome-2-8 Minatomirai, Nishi Ward, Yokohama, Kanagawa 220-0012, Japan',
    copyInName: true
  }
]
---

<section class="relative overflow-hidden">
  <div class="container mx-auto py-12 xl:py-16 px-4 sm:px-6 lg:px-36 xl:px-48 grid gap-4 items-center">
    <div class="lg:flex gap-x-8 lg:gap-x-16 items-center lg:flex-row-reverse">
      <img
        src="/images/present.png"
        loading="lazy"
        class="dark:invert dark:grayscale dark:brightness-0 w-full lg:w-1/2 h-auto sm:w-auto sm:max-h-44 xl:max-h-72 mx-auto relative mb-4 lg:mb-0"
      />
      <div class="relative lg:max-w-xl space-y-2">
        <Title>Jejak Kebaikan</Title>
        <p class="text-muted-foreground text-base lg:text-lg">
          Terima kasih atas langkah yang menghadirkan kebahagiaan, doa yang menguatkan, dan hadiah yang memperindah momen ini.
          Semoga Allah membalas kebaikan dengan pahala berlipat.
        </p>
      </div>
    </div>
    <List className="md:grid-cols-2 lg:grid-cols-3 gap-y-8">
      {
        ACCOUNTS.map(({ icon: Icon, ...account }) => (
          <ListItem>
            <IconContainer color={account.color}>{<Icon />}</IconContainer>
            <div>
              <ListTitle>
                {account.id} {!account.copyInName && <CopyButton content={account.id} client:only />}
              </ListTitle>
              <ListDesc>
                {account.name} {account.copyInName && <CopyButton content={account.name} client:only />}
              </ListDesc>
            </div>
          </ListItem>
        ))
      }
    </List>
  </div>
</section>
